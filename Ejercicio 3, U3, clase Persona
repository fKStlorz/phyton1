class Persona:
    __nombre = ""
    __direccion = ""
    __dni = ""
    __taller = None

    def __init__(self, nb, dir, dni, taller):
        self.__nombre = nb
        self.__direccion = dir
        self.__dni = dni
        self.__taller = taller

    def getNombre(self):
        return self.__nombre

    def getDireccion(self):
        return self.__direccion

    def getDni(self):
        return self.__dni

    def getTaller(self):
        return self.__taller
